<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <!-- Input TextBox with Placeholder -->
        <Grid Grid.Column="1" Grid.Row="0">
            <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Center" x:Name="calculationInput" FontSize="24" TextAlignment="Center"/>
            <TextBlock IsHitTestVisible="False" Text="Calculate.." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="#FFBBBBBB">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=calculationInput}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
        <!-- Clear and Backspace Buttons -->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="24"/>
                    <Setter Property="Margin" Value="4"/>
                </Style>
            </Grid.Resources>
            <Button Content="C" Click="ClearButton_Click"/>
            <Button Content="⌫" Grid.Column="1" Click="BackspaceButton_Click"/>
        </Grid>
        <!-- Calculator Buttons -->
        <UniformGrid Grid.Column="1" Grid.Row="2" Rows="4" Columns="4"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" UseLayoutRounding="False">
            <UniformGrid.Resources>
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="24"/>
                    <Setter Property="Margin" Value="4"/>
                </Style>
            </UniformGrid.Resources>

            <Button Content="7" Click="Button_Click"/>
            <Button Content="8" Click="Button_Click"/>
            <Button Content="9" Click="Button_Click"/>
            <Button Content="/" Click="Button_Click"/>

            <Button Content="4" Click="Button_Click"/>
            <Button Content="5" Click="Button_Click"/>
            <Button Content="6" Click="Button_Click"/>
            <Button Content="*" Click="Button_Click"/>

            <Button Content="1" Click="Button_Click"/>
            <Button Content="2" Click="Button_Click"/>
            <Button Content="3" Click="Button_Click"/>
            <Button Content="-" Click="Button_Click"/>

            <Button Content="0" Click="Button_Click"/>
            <Button Content="." Click="Button_Click"/>
            <Button Content="=" Click="EqualsButton_Click"/>
            <Button Content="+" Click="Button_Click"/>
        </UniformGrid>
    </Grid>
</Window>
